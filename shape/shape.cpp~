#include <iostream>
#include "shape.h"
using namespace std;

Shape::Shape(){cout << "make sure to set Number of sides\n";}
Shape::Shape(unsigned int s) {sides=s;}
unsigned int Shape::getNumberOfSides() {return sides;}
void Shape::setNumberOfSides(unsigned int nsides) {sides=nsides;}
//---------------Rectangle
Rectangle::Rectangle():Shape(4){}

Rectangle::Rectangle(double l,double w)
:Shape(4)
{
	length=l; width=w;
}

void Rectangle::setSides(double l,double w){length=l; width=w;}
double Rectangle::getArea(){return length*width;};
double Rectangle::getPerimeter(){return 2*(length+width);}

